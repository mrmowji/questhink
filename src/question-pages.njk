---
layout: layout.njk
pagination:
    data: questions
    size: 1
    alias: question
permalink: "{{ pagination.pageNumber + 1 }}/"
renderData:
  title: "{{ question.title }}"
  id: "{{ pagination.pageNumber + 1 }}"
  tags: question
tags: question
---

<div class="text-left font-bold text-5xl leading-none">
  <div class="text-5xl" id="question">{{ question.title }}</div>
  <div class="pt-5 text-sm font-normal">
    <a class="text-gray-500 hover:text-black pr-5 cursor-pointer" href="{{ page.url }}">#{{ pagination.pageNumber + 1 }}</a>
    <span class="text-gray-500 hover:text-black pr-5 cursor-pointer" id="copy-button">Copy</span>
    <a class="text-gray-500 hover:text-black pr-5" target="_blank" href="http://twitter.com/share?text={{ question.title }} [by @questhinkcom]&url={{ website.url }}{{ page.url }}">Tweet</a>
    <a class="text-gray-500 hover:text-black" id="another-question-button" href="">Another</a>
  </div>
</div>